<div class="row">
  <div class="col-md-3">
    <%= render 'agency_setting_sidebar' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">Agencie</div>
      <div class="panel-body">
        <div class="container">
          <%= form_for :agency, url: agencies_path, html: { multipart: true } do |f| %>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, class: "form-control", placeholder: "name" %>
            </div>
            <div class="form-group">
              <label>Admin Email</label>
              <%= f.text_field :email, class: 'form-control', placeholder: "email" %>
            </div>
            <div class="form-group">
              <label>Cover photo.</label>
              <%= f.file_field :cover_photo, class: "form-control" %>
            </div>
            <div class="form-group">
              <label>Contact No.</label>
              <%= f.text_field :contact_no, class: "form-control", placeholder: "Contact No" %>
            </div>
            <div class="form-group">
              <label>Location</label>
              <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
            </div>

            <%= render "shared/search_visibility", f: f %>
            
            <div class="form-group">
              <label>Description</label>
              <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Desciption" %>
            </div>
            <%= f.submit :submit, class: "btn btn-normal" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

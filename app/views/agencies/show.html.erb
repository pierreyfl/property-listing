<div class="row">
  <div class="col">
    <div class="panel panel-default">
      <div class="panel-heading"><h1><%= @agency.name %></h1></div>
      <div class="panel-body">
          <p><%= image_tag @agency.cover_photo.url %></p><br>
          <h3>About us</h3>
          <p><%= @agency.description %></p><br>
          <p><i class="fa fa-map-marker"></i> <strong>Location :</strong> <%= @agency.location %></p>
          <p><i class="fa fa-envelope"></i> <strong>Email :</strong> <%= @agency.email %></p>
          <p><i class="fa fa-phone"></i> <strong>Contact No. :</strong> <%= @agency.contact_no %></p>
          <hr>
          <h3>Our Agents</h3>
          <% @agency.agents.each do |agent| %>
            <%= link_to agent do %>
              <div>
                <p><%= image_tag agent.photo %></p>
                <p><%= agent.name %></p>
              </div>
            <% end %>
            <p><%= agent.title %></p>
          <% end %>
          <% if current_user.has_role? :agency_admin %>
            <%= link_to "Add Agent", new_agent_path, class: 'btn btn-success' %>
          <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Titlebar
================================================== -->
<div id="titlebar">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<h2>Log In & Register</h2>
				
				<!-- Breadcrumbs -->
				<nav id="breadcrumbs">
					<ul>
						<li><a href="#">Home</a></li>
						<li>Log In & Register</li>
					</ul>
				</nav>

			</div>
		</div>
	</div>
</div>


<!-- Contact
================================================== -->

<!-- Container -->
<div class="container">

	<div class="row">
	<div class="col-md-4 col-md-offset-4">

	<button class="button social-login via-twitter"><i class="fa fa-twitter"></i> Log In With Twitter</button>
	<button class="button social-login via-gplus"><i class="fa fa-google-plus"></i> Log In With Google Plus</button>
  <%= link_to user_facebook_omniauth_authorize_path, class:"button social-login via-facebook" do %>
  <i class="fa fa-facebook"></i> Log In With Facebook
  <% end %>
	<!--Tab -->
	<div class="my-account style-1 margin-top-5 margin-bottom-40">

		<ul class="tabs-nav">
			<li class=""><a href="#tab1">Log In</a></li>
			<li><a href="#tab2">Register</a></li>
		</ul>

		<div class="tabs-container alt">

			<!-- Login -->
			<div class="tab-content" id="tab1" style="display: none;">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

					<p class="form-row form-row-wide">
						<label for="username">Email Address:
							<i class="im im-icon-Male"></i>
              <%= f.email_field :email, autofocus: true, class: "input-text" %>
						</label>
					</p>

					<p class="form-row form-row-wide">
						<label for="password">Password:
							<i class="im im-icon-Lock-2"></i>
              <%= f.password_field :password, autocomplete: "off", class: "input-text" %>
						</label>
					</p>

					<p class="form-row">
            <%= f.submit "Log in", class: "button border margin-top-10" %>
            <% if devise_mapping.rememberable? %>
              <label for="rememberme" class="rememberme">
              <input name="rememberme" type="checkbox" id="rememberme" value="forever" /> Remember Me</label>
            <% end %>
					</p>

					<p class="lost_password">
						<a href="#" >Lost Your Password?</a>
					</p>
					
				<% end %>
			</div>
      

			<!-- Register -->
			<div class="tab-content" id="tab2" style="display: none;">

				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					
				<p class="form-row form-row-wide">
					<label for="username2">Full Name:
						<i class="im im-icon-Male"></i>
            <%= f.text_field :fullname, autofocus: true, class: "input-text" %>
					</label>
				</p>
					
				<p class="form-row form-row-wide">
					<label for="email2">Email Address:
						<i class="im im-icon-Mail"></i>
            <%= f.email_field :email, autofocus: true, class: "input-text" %>
					</label>
				</p>

				<p class="form-row form-row-wide">
					<label for="password1">Password:
						<i class="im im-icon-Lock-2"></i>
             <%= f.password_field :password, autocomplete: "off", class: "input-text" %>
					</label>
				</p>

				<p class="form-row form-row-wide">
					<label for="password2">Repeat Password:
						<i class="im im-icon-Lock-2"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-text" %>
					</label>
				</p>

				<p class="form-row">
           <%= f.submit "Sign up", class: "button border fw margin-top-10" %>
					<input type="submit" class="button border fw margin-top-10" name="register" value="Register" />
				</p>

				<% end %>
			</div>

		</div>
	</div>



	</div>
	</div>

</div>
<!-- Container / End -->


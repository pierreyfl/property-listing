<% rooms.each do |room| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <%= image_tag room.cover_photo(:medium) %>
      </div>
      <div class="panel-body">
        <%= link_to room.listing_name, room %><br/><br/>
        $<%= room.price %> - <%= room.home_type %> - <%= pluralize(room.bed_room, "bed") %>
        <div>
          <div id="star_room_<%= room.id %>"></div> <%= pluralize(room.average_rating, "review") %>
        </div>
        <br/>
        <a class="btn btn-default btn-readmore">Read more</a>
      </div>
    </div>
  </div>

  <script>
    $('#star_room_<%= room.id %>').raty({
      path: '/assets',
      readOnly: true,
      score: <%= room.average_rating %>
    });
  </script>
<% end %>

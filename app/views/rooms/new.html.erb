<div class="panel panel-default">
  <div class="panel-heading">
    List your beautiful property
  </div>
  <div class="panel-body">
    <div class="container">

      <%= form_for @room do |f| %>

       <div class="row">
         <div class="col-md-6">
           <div class="form-group">
             <label>Property Type</label>
             <%= f.select :home_type, Room::ACCOMADATION_TYPES.map{|k, v| [v, k]},
                           id: "home_type", prompt: "Select...", class: "form-control" %>
           </div>
         </div>


         <div class="col-md-6">
           <div class="form-group">
             <label>Price</label>
             <%= f.text_field :price, class: "form-control" %>
           </div>
         </div>

         
         <div class="col-md-6">
           <div class="form-group">
             <label>Bedroom</label>
             <%= f.select :bed_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                           id: "bed_room", prompt: "Select...", class: "form-control" %>
           </div>
         </div>

         <div class="col-md-6">
           <div class="form-group">
             <label>Bathrooms</label>
             <%= f.select :bath_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                           id: "bath_room", prompt: "Select...", class: "form-control" %>
           </div>
         </div>
       </div>
        <div><%= f.submit "Create My Property", class: "btn btn-normal" %></div>

      <% end %>

    </div>
  </div>
</div>

<!-- Titlebar
================================================== -->
<div id="titlebar">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<h2>My Properties</h2>

				<!-- Breadcrumbs -->
				<nav id="breadcrumbs">
					<ul>
						<li><a href="#">Home</a></li>
						<li>My Properties</li>
					</ul>
				</nav>

			</div>
		</div>
	</div>
</div>


<!-- Content
================================================== -->
<div class="container">
	<div class="row">


		<!-- Widget -->
		<div class="col-md-4">
      <% if current_user.agency_id == nil %>
			<%= render "shared/sidebar" %>
      <% else %>
    	<div class="my-account-nav-container">
    		<ul class="my-account-nav">
    			<li class="sub-nav-title">Manage Properties</li>
    			<li>
            <%= link_to new_property_path do %>
              <i class="sl sl-icon-action-redo"></i> List Property
            <% end %>
          </li>
    			<li>
            <%= link_to my_properties_path do %>
              <i class="im im-icon-Home-5"></i> My Properties
             <% end %>
          </li>
    			<li>
            <%= link_to agents_path do %>
              <i class="im im-icon-Home-5"></i> All Properties
             <% end %>
          </li>
    		</ul>
      </div>
      <% end %>
		</div>

		<div class="col-md-8">
			<table class="manage-table responsive-table">

				<tr>
					<th><i class="fa fa-file-text"></i> Property</th>
					<th class="expire-date"><i class="fa fa-calendar"></i> Expiration Date</th>
					<th></th>
				</tr>

				<!-- Item #1 -->
        <% @properties.each do |p| %>
				<tr>
					<td class="title-container">
						<img src="images/listing-02.jpg" alt="">
						<div class="title">
							<h4><%= link_to p.name, property_path(p) %></h4>
							<span><%= p.address %></span>
							<span class="table-property-price"><% if p.availability == "rent"%><%= p.price %> / monthly <% end %></span>
						</div>
					</td>
					<td class="expire-date">December 30, 2018</td>
					<td class="action">
            <%= link_to edit_property_path(p) do %>
						  <i class="fa fa-pencil"></i> Edit
              <% end %>
              <%= link_to property_url(p), method: :delete,
                                                data: { confirm: "You sure?" } do %>
						<i class="fa fa-remove"></i> Delete
            <% end %>
					</td>
				</tr>
<% end %>

			</table>
		</div>

	</div>
</div>
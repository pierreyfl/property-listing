<h3>Admin packages</h1>
<p>
    <%= link_to "Create package", new_package_path, :class => 'btn btn-primary' %>

</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Period</th>
        <th>Expiry</th>
        <th></th>
    </tr>
    
    <% @packages.each do |package|%>
    <tr>
        <td><%= package.name %></td>
        <td><%= package.price %></td>
        <td><%= package.listing_period %></td>
        <td></td>
        <td>
            <%= link_to "Edit", edit_package_path(package), :class => 'btn btn-primary btn-xs' %>
            <%=link_to "Delete", package_path(package), :method => :delete, :class => "btn btn-danger btn-xs", :confirm => "Are you sure ?"%>  

        </td>
    </tr
    <% end %>
   
</table>